<% if current_user.liked? likeable %>
  <%= form_tag unlike_path(post_id: likeable.id), method: :post, remote: true do %>
    <%= button_tag 'unlike', class: 'btn btn-primary' %>
  <% end %>
<% else %>
  <%= form_tag like_path(post_id: likeable.id), remote: true do %>
    <%= button_tag 'like', class: 'btn btn-primary' %>
  <% end %>
<% end %>