<div id="post-<%= post.id %>" class="post">
  <div class="info">
    <%= render 'shared/avatar', user: post.user %>
    <h4 class="name"><%= post.user.name %></h4>
    <span class="action">created a <%= link_to 'post', post %></span>
  </div>
  <div class="content">
    <span class="text"><%= post.content %></span>
    <% if post.attachment.present? %>
      <div class="attachment">
        <%= image_tag post.attachment%>
      </div>
    <% end %>
    <%= render 'shared/created_at', activity: post %>
    <div class="points">
      <span class="like-count"><%= pluralize(post.cached_votes_up, 'like') %></span>
      <span class="comments-count"><%= pluralize(post.comments_count, 'comment') %></span>
      <div class="pull-right">
        <% if belongs_to_user?(post) %>
          <%= form_tag post_path(post), method: :delete, remote: remote do %>
            <%= button_tag class: 'btn btn-danger btn-sm' do %>
              <% fa_icon 'trash' %>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
  <% if user_signed_in? %>
    <div class="actions">
      <div class="row">
        <div class="col-xs-6 like">
          <%= render 'likes/form', likeable: post %>
        </div>
        <div class="col-xs-6 comment">
          <%= link_to post, class: 'btn btn-block' do %>
            <% fa_icon 'comment' %> comment
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>