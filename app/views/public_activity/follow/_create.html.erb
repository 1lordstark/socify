<% if activity.trackable %>
  <div class="follow">
    <div class="follower">
      <%= render 'partials/avatar', user: activity.owner %>
      <h4 class="name"><%= activity.owner.name %></h4>
      <span class="action">Followed </span>
    </div>
    <div class="followee">
      <%= render 'partials/avatar', user: activity.trackable.followable %>
      <h4 class="name"><%= activity.trackable.followable.name %></h4>
    </div>
    <%= render 'partials/created_at', activity: activity %>
  </div>
<% end %>