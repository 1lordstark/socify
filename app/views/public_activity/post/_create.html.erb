<% if activity.trackable %>
  <div class="post">
    <div class="info">
      <%= render 'partials/avatar', user: activity.owner %>
      <h4 class="name"><%= activity.owner.name %></h4>
      <span class="action">created a <%= link_to 'post', activity.trackable %></span>
    </div>
    <div class="content">
      <span class="text"><%= activity.trackable.content %></span>
      <% if activity.trackable.attachment.present? %>
        <div class="attachment">
          <%= image_tag activity.trackable.attachment%>
        </div>
      <% end %>
      <%= render 'partials/created_at', activity: activity %>
      <div class="points">
        <span><%= pluralize(activity.trackable.cached_votes_up, 'like') %></span>
        <span><%= pluralize(activity.trackable.comments_count, 'comment') %></span>
      </div>
    </div>
    <% if user_signed_in? %>
      <div class="actions">
        <div class="row">
          <div class="col-xs-6 like">
            <%= render 'likes/form', likeable: activity.trackable %>
          </div>
          <div class="col-xs-6 comment">
            <%= link_to activity.trackable, class: 'btn btn-block' do %>
              <%= fa_icon 'comment' %> comment
          <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>