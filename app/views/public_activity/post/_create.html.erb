<% if activity.trackable %>
  <div id="post-<%= activity.trackable.id %>" class="post">
    <div class="info">
      <%= render 'partials/avatar', user: activity.owner %>
      <h4 class="name"><%= activity.owner.name %></h4>
      <span class="action">created a <%= link_to 'post', activity.trackable %></span>
    </div>
    <div class="content">
      <span class="text"><%= activity.trackable.content %></span>
      <% if activity.trackable.attachment.present? %>
        <div class="attachment">
          <%= image_tag activity.trackable.attachment%>
        </div>
      <% end %>
      <div class="created-at">
        <%= fa_icon 'clock-o' %>
        <%= relative_time(activity.created_at) %> ago
      </div>
      <div class="points">
        <span><%= pluralize(activity.trackable.cached_votes_up, 'like') %></span>
        <span><%= pluralize(activity.trackable.comments_count, 'comment') %></span>
      </div>
    </div>
    <div class="actions">
    </div>
  </div>
<% end %>