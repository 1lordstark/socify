<div class="row">
  <div class="col-lg-6 col-lg-offset-3">
    <h3>Edit Profile</h3>
    <%= form_for @user do |f| %>
      <div class="form-group">
        <%= f.label :avatar %>
        <br>
        <%= render 'partials/avatar', user: @user %>
        <%= f.file_field :avatar %>
      </div>
      <div class="form-group">
        <%= f.label :cover %>
        <br>
        <%= f.file_field :cover %>
      </div>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, placeholder: 'name', class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :about %>
        <%= f.text_area :about, placeholder: 'about', class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= submit_tag "Update", class: 'btn btn-primary' %>
      </div>
    <% end %>
    <hr>
    <h3>Deactivate</h3>
    <p>Unhappy?</p>
    <%= button_to 'Cancel my account', registration_path(@user), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-danger' %>
  </div>
</div>